html
    head
        title= "PUG INDEX"
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")
    body(style="background-color: gray; color: white") 
        div(class="container d-flex flex-column align-items-center")
            form(action="/products" method="post" style="width: 20rem" class="d-flex flex-column")
                div(class="mb-3")
                    label(for="product" class="form-label")= "Producto"
                    input(type="text" name="title" class="form-control" id="product" placeholder="Nombre de producto")
                div(class="mb-3")
                    label(for="price" class="form-label")="Precio"
                    input(type="number" name="price" class="form-control" id="price" placeholder="0000")
                div(class="mb-3")
                    label(class="form-label" for="image")="Imagen URL"
                    input(type="text" name="thumbnail" class="form-control" id="image")
                button(type="submit" class="btn btn-primary")="Submit"
            a(href="/products" class="btn btn-primary" style="width: 10rem")="Ir a productos"        
